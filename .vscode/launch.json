{
    "version": "0.2.0",
    "configurations": [
      {
        // ðŸŸ¢ Angular Frontend Debugging (already existing)
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "https://localhost:4200",
        "webRoot": "${workspaceFolder}"
      },
      {
        // ðŸ”µ Node.js Backend Debugging (HTTPS + nodemon)
        "name": "ðŸ”¥ Debug HTTPS Backend",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/backend/functions/index.js",
        "envFile": "${workspaceFolder}/backend/functions/.env",
        "cwd": "${workspaceFolder}/backend/functions",
        "restart": true,
        "runtimeArgs": ["--inspect"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  